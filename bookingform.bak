<form id="booking" action="https://script.google.com/macros/s/AKfycbyaHtR2HhmMYnN9M9kPAIVkp6iW7qDHBMiSqptzqcp9jOd_ccU/exec" method="get">
  <label>You Name: </label>
  <input type="text" name="name" /><br />
  <label>E-mail: </label>
  <input type="email" name="email" /><br />
  <input type="submit" />
</form>

<script>
$(function(){
  var _data = {};
  $("#booking").submit(function(event){
    event.preventDefault();
    _data = {};
    $(this).children(":input").each(function(index){
      var key = $(this).attr("name");
      if (undefined != key) {
        _data[key] = $(this).val();
        //console.log($(this).attr("name"));
      }
    });
    $.ajax({
      type: "get",
      async: false,
      url: $(this).attr("action"),
      data: _data,
      dataType: "jsonp",//指定以jsonp方式執行
      jsonp: "prefix",
      success: function(res){
        console.log("res: %o", res);
        console.log(res.log);
      },
      error: function(e){
        console.log(e);
      }
    });
  });
});
</script>
